@model IEnumerable<Project.MVC.ViewModels.VehicleMakeViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="bg-white p-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Vehicle Makes</h2>
        </div>
        <form method="get">

            <div>
                <div>
                    <div class="row" style="padding-top:10px">
                        <div>
                            @Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control", placeholder = "search..." } })
                        </div>

                        <div>
                            <button type="submit" class="h-100 btn btn-info form-control">
                                <i class="fas fa-search"></i>Search
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </form>
        <div class="col-6">
            <a asp-controller="VehicleMakes" asp-action="Create" class="btn btn-primary">
                Create New
            </a>
        </div>
        <br />
    </div>
    <br />
    <ejs-grid id="Grid" dataSource="@Model.ToList()" allowFiltering="true" allowSorting="true" allowPaging="true">
        <e-grid-filtersettings type="Menu"></e-grid-filtersettings>
        <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
        <e-grid-columns>
            <e-grid-column field="Name" headerText="Name" textAlign="Left"></e-grid-column>
            <e-grid-column field="Abrv" headerText="Abrv" textAlign="Left"></e-grid-column>
            <e-grid-column field="Id" headerText="" width="75"
                           template="<a rel='nofollow' href='VehicleMakes/Edit/${Id}' class='btn btn-primary'> <i class='fas fa-edit'></i><a>">
            </e-grid-column>
            <e-grid-column field="Id" headerText="" width="75"
                           template="<a rel='nofollow' href='VehicleMakes/Details/${Id}' class='btn btn-primary'> <i class='fas fa-info-circle'></i><a>">
            </e-grid-column>
            <e-grid-column field="Id" headerText="" width="75"
                           template="<a rel='nofollow' href='VehicleMakes/Delete/${Id}' class='btn btn-danger'> <i class='fas fa-trash-alt'></i><a>">

            </e-grid-column>
        </e-grid-columns>
    </ejs-grid>
</div>





