
@model Project.MVC.ViewModels.VehicleModelViewModel
@{
    ViewData["Title"] = "Create";
}

{
    ViewData["Title"] = "Create";
}

<h1 class="text-primary">Create</h1>

<h4 class="text-primary">Vehicle Models</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MakeId" class="control-label">Vehicle Make</label>
                <select asp-for="MakeId" class="form-control" asp-items=" ViewBag.MakesList"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abrv" class="control-label"></label>
                <input asp-for="Abrv" class="form-control" />
                <span asp-validation-for="Abrv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

